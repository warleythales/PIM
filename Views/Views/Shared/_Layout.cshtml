<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - PIM 3 SEM</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BRAVE", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Condominio", "Index", "Condominio")</li>
                    <li>@Html.ActionLink("Visita", "Index", "Visita")</li>
                    <li>@Html.ActionLink("Condomino", "Index", "Condomino")</li>
                    <li>@Html.ActionLink("Visitante", "Index", "Visitante")</li>
                    <li>@Html.ActionLink("Apartamento", "Index", "Apartamento")</li>
                    <li>@Html.ActionLink("Veículo", "Index", "Veiculo")</li>
                    <li>@Html.ActionLink("Torre", "Index", "Torre")</li>
                    <li>@Html.ActionLink("Ocorrência", "Index", "Ocorrencia")</li>
                    <li>@Html.ActionLink("Tipo Ocorrência", "Index", "TipoOcorrencia")</li>
                    @*<li>@Html.ActionLink("Área de Lazer", "Index", "AreaLazer")</li>*@
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <h5 align="center"><p>&copy; @DateTime.Now.Year - PIM 3 SEM</p></h5>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
