@model IEnumerable<Model.Ocorrencia>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de Ocorrências</h2>

<p>
    <a class="btn btn-primary" href="@Url.Action("Create")">Nova</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Descricao)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Descricao)
    </td>
    <td>
    <td>
        <a class="btn btn-success" href="@Url.Action("Edit", new { id = item.Id })">Editar</a>
        <a class="btn btn-danger" href="@Url.Action("Delete", new { id = item.Id })">Excluir</a>
    </td>
    </td>
</tr>
}

</table>
